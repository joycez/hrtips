<h1>Listing Resources</h1>
<%= link_to 'home', root_path %>
<% if current_admin %>
 | <%= link_to 'New Resource', new_resource_path %>
<% end %>

<% @brochures.each do |b| %>
  <% if not b.resources.blank? %>
    <table>
      <h2><%= b.topic %></h2>
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% b.resources.each do |r| %>
        <tr>
          <td><%= r.name %></td>
          <td><%= link_to 'Show', r %></td>
          <% if current_admin %>
          <td><%= link_to 'Edit', edit_resource_path(r) %></td>
          <td><%= link_to 'Destroy', r, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
